
pipeline {
    agent {
        docker {
            image 'maven:3-alpine'
            args '-v /root/.m2:/root/.m2'
        }
    }
    stages {
        stage('Build') {
            steps {
                dir('examble/java'){
                    sh '''
                     export MAVEN_OPTS="-XX:MaxPermSize=128m"
                     mvn -Plight-test install
                     '''
                }
            }
        }
        stage('Artifact') {
            steps {
                echo "Work!"
            }
        }
    }
}
